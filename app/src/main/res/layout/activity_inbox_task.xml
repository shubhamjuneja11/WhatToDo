        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/activity_new_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:showIn="@layout/activity_new_list"
            tools:context="probeginners.whattodo.NewList"
            android:background="@drawable/back9"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/todo">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Task Name"

                android:layout_marginLeft="30dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:textSize="15dp"
                android:background="@drawable/rounded_corners"
                android:id="@+id/listnametag"/>



               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/listnametag"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="30dp"
                   android:layout_marginRight="10dp"
                   android:id="@+id/relativelayout"
                   android:background="@color/white"

                   >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="40dp"
                       android:id="@+id/newtaskenter"
                       android:weightSum="20"
                       android:background="@color/white"
                       android:layout_marginRight="5dp"
                       android:focusable="true" android:focusableInTouchMode="true"
                       >
                       <EditText
                           android:layout_width="0dp"
                           android:layout_weight="18"
                           android:layout_height="match_parent"
                           android:textSize="20dp"
                           android:hint="Add new task..."
                           android:id="@+id/newtaskname"
                           android:singleLine="true"
                           android:textColor="#0d47a1"
                           android:background="@color/white"
                           android:textAlignment="center"
                           android:textColorHint="@color/hintcolor"

                           />

                       <ImageButton
                           android:layout_width="6dp"
                           android:layout_weight="2"
                           android:layout_height="40dp"
                           android:src="@drawable/favourite"
                           android:background="@color/white"
                           android:scaleType="fitCenter"
                           android:id="@+id/fav"
                           android:onClick="favourite"
                           android:adjustViewBounds="true"

                           />
                   </LinearLayout>

               </RelativeLayout>
           </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/relativelayout1"
        android:minHeight="50dp"
        android:layout_marginTop="20dp"

        android:layout_marginLeft="30dp"
        android:layout_below="@id/todo"
        android:layout_marginRight="@dimen/activity_horizontal_margin"

        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/calendar"
            android:id="@+id/image"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:text="Click to Set Reminder"
            android:id="@+id/reminder"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/hintcolor"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/alarmoff"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/alarm"
            android:onClick="setalarm" />
    </RelativeLayout>

        </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
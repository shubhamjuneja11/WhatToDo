<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools">



    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"

        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        android:background="@drawable/selector"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/taskimage"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="@dimen/album_cover_height"
                android:background="@drawable/selector"
                android:clickable="true"
                android:src="@drawable/grocery"
                android:scaleType="fitXY"
                android:onClick="funopen"
                />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/taskimage"
                android:paddingLeft="@dimen/album_tasktopic_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textColor="@color/black"
                android:text="Task name"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginRight="20dp"
                android:onClick="funopen"

                />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="15dp"
                android:progressDrawable="@drawable/custom_progrss_bar"
                android:layout_marginTop="5dp"
                android:id="@+id/progressBar"
                android:layout_below="@id/title"
                android:progress="56"
                android:onClick="funopen"
                />

            <TextView
                android:id="@+id/taskcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progressBar"
                android:text="12/40"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_marginRight="20dp"
                android:onClick="funopen"

                />

            <RelativeLayout
                android:layout_width="30dp"
                android:layout_height="55dp"
                android:layout_alignParentRight="true"
                android:background="@color/white"

                android:layout_alignParentBottom="true"
                android:onClick="funoptions"
                >
                <ImageButton
                    android:id="@+id/overflow"
                    android:layout_width="20dp"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:layout_height="20dp"
                    android:src="@drawable/dots"
                    android:onClick="funoptions"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"

                    />
                />
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>